import os
import rtconfig
from building import *

Import('SDK_LIB')

cwd = GetCurrentDir()

# add general drivers
src = Split('''
board.c
''')

path =  [cwd]

startup_path_prefix = SDK_LIB

if rtconfig.CROSS_TOOL == 'gcc':
    src += ['startup/GCC/startup_gd32f10x_md.s']
elif rtconfig.CROSS_TOOL == 'keil':
    src += ['startup/ARM/startup_gd32f10x_md.s']
elif rtconfig.CROSS_TOOL == 'iar':
    src += ['startup/IAR/startup_gd32f10x_md.s']
    
CPPDEFINES = ['GD32F10X_MD']
group = DefineGroup('Drivers', src, depend = [''], CPPPATH = path, CPPDEFINES = CPPDEFINES)

Return('group')
